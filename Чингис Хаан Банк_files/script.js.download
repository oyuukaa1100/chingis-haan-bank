const swiper = new Swiper('.mySwiper', {
  slidesPerView: 'auto',
  spaceBetween: 0,
  freeMode: true,
  loop: true,
  autoplay: {
    delay: 2500,
    disableOnInteraction: false,
  },
  breakpoints: {
    640: { slidesPerView: 3 },
    768: { slidesPerView: 4 },
    1024: { slidesPerView: 5 },
  },
});

// Баннерын swiper
